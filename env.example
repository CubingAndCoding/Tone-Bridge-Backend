# ToneBridge Backend Environment Variables

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
HOST=0.0.0.0
PORT=5000

# Model Configuration
EMOTION_MODEL_NAME=m3hrdadfi/emotion-english-distilroberta-base
TRANSCRIPTION_MODEL_NAME=openai/whisper-base

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8100,https://tonebridge.vercel.app 